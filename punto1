#include <iostream>

using namespace std;

class SerVivo{
    virtual void Respiro();
    virtual void MeAlimento();
    virtual void Habito();
    virtual void MeReproduzco();
    virtual void MeDesplazo();
};

class Ave: public SerVivo{
    public:
    bool aereo;
    bool terrestre;
    bool acuatico;
    int peso_promedio;
    Ave(bool a,bool t,bool ac, int peso){
        aereo=a; terrestre=t; acuatico=ac; peso_promedio=peso;
    }
};
class pinguino: public Ave{
    public:
    string habitat;
    string movilidad_especial;

    void Habito(){
        cout<<"Los pinguinos habitamos en :"<<habitat<<"\n";
    }
    void MeDesplazo(){
        cout<<"Los pinguinos podemos movernos con nuestra habilidad: "<<movilidad_especial<<"\n";
    }
};
class Mamifero: public SerVivo{
    public:
    bool terrestre;
    bool carnivoro;
    bool hervivoro;
    bool omnivoro;
    int mpeso_promedio;
    Mamifero(bool t, bool c, bool h, bool o, int m){
        terrestre=t; carnivoro=c; hervivoro=h; omnivoro=o; mpeso_promedio=m;
    }
};
class murcielago: public Mamifero{
    public:
    string desplazamiento;
    
    void MeDesplazo(){
        cout<<"los Murcielagos nos desplazamos: "<<desplazamiento<<"\n";
    }
};
class Reptil: public SerVivo{
    bool depredador;
    bool semiacuatico;
    bool vive_en_desierto;
    int longitud_cola;
    Reptil(bool d, bool s, bool v, int l){
        depredador=d;semiacuatico=s;vive_en_desierto=v;longitud_cola=l;
    }
};
class cocodrilo: public Reptil{
    string estrategia_alimento;
    
    void MeAlimento(){
        cout<<"Para alimentarnos los cocodrilos utilizamos la estrategia: "<<estrategia_alimento<<"\n";
    }
};
class Anfibio: public SerVivo{
    bool venenoso;
    int apeso_promedio;
    Anfibio(bool v, int a){
        venenoso=v;apeso_promedio=a;
    }
};
class ranavenenosa: public Anfibio{
    string desplazar;
    
    void MeDesplazo(){
        cout<<"Las ranas para desplazarnos usamos el moviemiento: "<<desplazar<<endl;
    }
};
class Pez: public SerVivo{
    bool carnivoro;
    int largo;
    Pez(bool c,int l){
        carnivoro=c;largo=l;
    }
};
class pezEspada: public Pez{
    string peculiaridad;
    string alimento;
    
    void MeAlimento(){
        cout<<"Los peces espada nos alimentamos de: "<<alimento<<endl;
    }
};
class Insecto: public SerVivo{
    bool volador;
    bool solitario;
    int huevos_por_camada;
    Insecto(bool v,bool s, int h){
        volador=v;solitario=s;huevos_por_camada=h;
    }
};
class mantis: public Insecto{
    string respiracion;
    
    void Respiro(){
        cout<<"Las mantis respiramos: "<<respiracion<<endl;
    }
};
int main()
{
    cout<<"Hello World";

    return 0;
}
