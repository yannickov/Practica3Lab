#include <iostream>

using namespace std;

class SerVivo{
    public:
    virtual void Respiro(){};
    virtual void MeAlimento(){};
    virtual void Habito(){};
    virtual void MeReproduzco(){};
    virtual void MeDesplazo(){};
};

class Ave: public SerVivo{
    public:
    string tipo;
    int peso_promedio;
    Ave(string ti="aereo", int peso=0){
        tipo=ti; peso_promedio=peso;
    }
};
class Pinguino: public Ave{
    public:
    string habitat;
    string movilidad_especial;
    Pinguino(string habit="el polo sur",string mov="deslizamiento"){
        habitat=habit;movilidad_especial=mov;
    }
    void Habito(){
        cout<<"Los pinguinos habitamos en :"<<habitat<<"\n";
    }
    void MeDesplazo(){
        cout<<"Los pinguinos podemos movernos con nuestra habilidad: "<<movilidad_especial<<"\n";
    }
};
class Mamifero: public SerVivo{
    public:
    string Mtipo;
    string alimentacion;
    int mpeso_promedio;
    Mamifero(string _Mtipo="terrestre",string _almentacion="omnivoro",int peso=0){
        Mtipo=_Mtipo;alimentacion=_almentacion;mpeso_promedio=peso;
    }
};
class Murcielago: public Mamifero{
    public:
    string localizacion;
    Murcielago(string locali="ecolocalizacion"){
        localizacion=locali;
    }
    void MeDesplazo(){
        cout<<"los Murcielagos nos desplazamos usando: "<<localizacion<<endl;
    }
};
class Reptil: public SerVivo{
    public:
    string rtipo;
    int longitud_cola;
    Reptil(string tipo="terrestre", int l=0){
        rtipo=tipo;longitud_cola=l;
    }
};
class Cocodrilo: public Reptil{
    public:
    string estrategia_alimento;
    Cocodrilo(string est="emboscada en el agua"){
        estrategia_alimento=est;
    }
    
    void MeAlimento(){
        cout<<"Para alimentarnos los cocodrilos utilizamos la estrategia: "<<estrategia_alimento<<"\n";
    }
};
class Anfibio: public SerVivo{
    public:
    string defensa;
    int apeso_promedio;
    Anfibio(string D="ser venenoso", int a=0){
        defensa=D;apeso_promedio=a;
    }
};
class Ranavenenosa: public Anfibio{
    public:
    string desplazar;
    Ranavenenosa(string dess="Saltar"){
        desplazar=dess;
    }
    
    void MeDesplazo(){
        cout<<"Las ranas para desplazarnos usamos el moviemiento: "<<desplazar<<endl;
    }
};
class Pez: public SerVivo{
    public:
    string p_alimentacion;
    int largo;
    Pez(string p_a="omnivoro",int l=0){
        p_alimentacion=p_a;largo=l;
    }
};
class PezEspada: public Pez{
    public:
    string peculiaridad;
    string alimento;
    PezEspada(string alim="carnivoro",string pec="tiene una nariz como espada"){
        alimento=alim; peculiaridad=pec;
    }
    
    void MeAlimento(){
        cout<<"Los peces espada tenemos alimentaciÃ³n tipo: "<<alimento<<endl;
    }
};
class Insecto: public SerVivo{
    public:
    string in_alimentacion;
    int huevos_por_camada;
    Insecto(string in_al="omnivoro", int h=0){
        in_alimentacion=in_al;huevos_por_camada=h;
    }
};
class Mantis: public Insecto{
    public:
    string respiracion;
    Mantis(string ress="aire"){
        respiracion=ress;
    }
    void Respiro(){
        cout<<"Las mantis respiramos: "<<respiracion<<endl;
    }
    void MeAlimento(){
        in_alimentacion="carnivoras";
        cout<<"Como somos insectos, las mantis somos: "<<in_alimentacion<<endl;
    }
};

void ImprimirDatosSerVivo(SerVivo& obj){
    obj.Respiro();
    obj.MeAlimento();
    obj.Habito();
    obj.MeReproduzco();
    obj.MeDesplazo();
}

int main()
{
    int opcion;
    cout<<"Bienvenido a MundoAnimal"<<endl<<endl;
    cout<<"Seleccione una de las opciones para ver informacion del animal que desee: "<<endl;
    cout<<"1. Pinguino\n2. Murcielago\n3. Cocodrilo\n4. Rana venenosa\n5. Pez espada\n6. Mantis\n:";
    cin>>opcion;
    Pinguino temp1;Murcielago temp2;Cocodrilo temp3;Ranavenenosa temp4;PezEspada temp5;Mantis temp6;
    switch(opcion){
        case 1:
        ImprimirDatosSerVivo(temp1);
        break;
        case 2:
        ImprimirDatosSerVivo(temp2);
        break;
        case 3:
        ImprimirDatosSerVivo(temp3);
        break;
        case 4:
        ImprimirDatosSerVivo(temp4);
        break;
        case 5:
        ImprimirDatosSerVivo(temp5);
        break;
        case 6:
        ImprimirDatosSerVivo(temp6);
        break;
    }
        
    return 0;
}
